			background-color: transparent !important
		.flex-container
			center-win()
			button
				green-button()

.btn-next-container
	flex-end()
	margin: 25px 0
	button, a
		background-color: gray_bg_card !important
		// height: 50px
		width: 250px
		&.btn-green
			green-button()

